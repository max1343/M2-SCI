package modele;

public abstract class Action {

	public void move(int x, int y, Agent a){
		Environnement env = a.getEnv();
		if (x <0)
			x = env.width - 1;
		if (y<0)
			y = env.height - 1;
		
		
		
		a.getEnv().deleteBall(a);
		a.setPosX(a.getPosX() + x);
		a.setPosY(a.getPosY() + y);
		a.getEnv().setBall(a);
	}
	
	
}
